{
  // See https://go.microsoft.com/fwlink/?LinkId=733558
  // for the documentation about the tasks.json format
  "version": "2.0.0",
  "tasks": [
    {
      "label": "build",
      "type": "shell",
      "command": "mkdir -p build && g++ app_installer.cc -std=c++17 -Ilibs/webview $(pkg-config --cflags --libs gtk+-3.0 webkit2gtk-4.0) -o build/app_installer",
      "problemMatcher": []
    },
    {
      "label": "test",
      "type": "shell",
      "command": "./build/app_installer /tmp/*.tar.xz",
      "problemMatcher": []
    },
    {
      "label": "install",
      "type": "shell",
      "command": "sh scripts/install.sh",
      "problemMatcher": []
    },
    {
      "label": "build_iso",
      "type": "shell",
      "command": "sh scripts/build_iso.sh",
      "problemMatcher": []
    }
  ]
}

    {
      "label": "install",
      "type": "shell",
      "command": "sh scripts/install.sh",
      "problemMatcher": []
    },
    {
      "label": "package",
      "type": "shell",
      "command": "sh scripts/package.sh",
      "problemMatcher": []
    },
    {
      "label": "build_appimage",
      "type": "shell",
      "command": "appimage-builder --recipe AppImageBuilder.yml --skip-test",
      "problemMatcher": []
    }
  ]
